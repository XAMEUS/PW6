{% extends 'base.html.twig' %}

{% block help %}

<div style="padding:12px; background:#fefefe;color:#333; margin-bottom:12px">
    <h4>Search a user &nbsp; ( ⚆ _ ⚆ )</h4>
    <p>Search by name / username / email.<p>
</div>
{% endblock %}

{% block body %}

<div class="container top-buffer">

  <form>
      <label for="recherche" class="sr-only">Recherche</label>
      <input type="text" id="recherche" name="recherche" class="form-control" placeholder="search" required autofocus>
  </form>

  <table class="table table-striped table-hover">
  <thead>
      <tr>
          <th>Lastname</th>
          <th>Firstname</th>
          <th>Mail</th>
          <th>Username</th>
      </tr>
  </thead>
  <tbody id="tbody" data-href={{path('user')}}>
  </tbody>
  </table>

</div> <!-- /container -->
{% endblock %}

{% block javascripts %}

    <script src="http://code.jquery.com/jquery-1.11.3.js"></script>
    <script src="{{ asset('js/annuaire.js') }}"></script>

{% endblock %}
