{% extends 'formations/formations_base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/formations.css') }}">
{% endblock %}

{% block help %}
<div style="padding:12px; background:#fefefe;color:#333; margin-bottom:12px">
    <h4>List of all proposed formations</h4>
    <p>You can access to a specific formation by clicking on it.</p>
</div>
{% endblock %}

{% block formationsbody %}


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody id="tbody">
        {% for formation in formations %}
            <tr class="formationRow" data-href={{ path('formation',{'id':formation.getId()})}}>
                <td>{{formation.getName()}}</td>
                <td>{{formation.getDate()|date('d-m-Y')}}</td>
                <td>{{formation.getDuration()}} jour(s)</td>
            </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}
