{% extends 'formations/formations_base.html.twig' %}

{% block title %}Formation: {{formation.getName()}}{% endblock %}

{% block help %}
<div style="padding:12px; background:#fefefe;color:#333; margin-bottom:12px">
    <h4>Formation description</h4>
    <p>You can apply to this formation, a validator will accept or reject you application.</p>
</div>
{% endblock %}

{% block formationsbody %}

<div class="panel panel-default">
    <div class="panel-heading">
        <h1>{{formation.getName()}}</h1>
    </div>
    <div class="panel-body">
        <ul class="list-unstyled">
            <li>Date : {{formation.getDate()|date('d-m-Y')}}</li>
            <li>Duration : {{formation.getDuration()}} jour(s)</li>
            <li>Cost : {{formation.getCost()}}â‚¬</li>
        </ul>
        <hr>
        <h4>Contents</h4>
        <p>{{formation.getContents()}}</p>
        <hr>
        <h4>Prerequisites</h4>
        <p>{{formation.getPrerequisites()}}</p>
        <hr>
        <div class="apply"></div>
    </div>
</div>



{% endblock %}

{% block javascripts %}

    <script src="http://code.jquery.com/jquery-1.11.3.js"></script>
    <script src="{{ asset('js/formations.js') }}"></script>
    <script src="{{ asset('js/formation.js') }}"></script>

{% endblock %}
